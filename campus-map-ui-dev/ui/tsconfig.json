{
  "compilerOptions": {
    "module": "amd",
    "noImplicitAny": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "jsx": "react",
    "jsxFactory": "tsx",
    "target": "es5",
    "experimentalDecorators": true,
    "preserveConstEnums": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["es2017", "dom"],
    "downlevelIteration": true,
    "outDir": "./public/scripts",
    "removeComments": true
  },
  "include": [
    "./public/typescript/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
